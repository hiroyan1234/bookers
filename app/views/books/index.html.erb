<!DOCTYPE HTML>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>index</title>
    <link rel="stylesheet" href="books.css" />
  </head>

  <body>
      <p id="notice"><%=flash[:notice] %></p>
      <h1>Books</h1>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @books.each do |book| %>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td><%= link_to "Show", book_path(book.id), class: "show_#{book.id}" %></td>
              <td><%= link_to "Edit", edit_book_path(book.id), class: "edit_#{book.id}" %></td>
              <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ", class: "destroy_#{book.id}" %></td>
          </tr>
            <% end %>

      </table>

      <h2>New book</h2>
      <div>
        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h2><%= @book.errors.count %> erros prohibited this book from being saved:</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>
      </div>

      <%= form_with model: @book do |f| %>
          <div class="field">
            <%= f.label :title, "Title" %>
            <%= f.text_field :title, class: "book_title", id: "book_title" %>
          </div>


          <div class="field">
            <%= f.label :body, "Body" %>
            <%= f.text_area :body, class: "book_body", id: "book_body" %>
          </div>

          <div><%= f.submit 'Create Book' %></div>
      <% end %>
  </body>
</html>